@{
    ViewData["Title"] = "Dashboard";
}
@model CBT.Models.ViewAuction

<div class="row">
    <div class="col-md-8"><h1>New Auction</h1></div>
    <div style="margin-top:20px;text-align:right;" class="col-xs-4"><h4><a href="/logout">Logout</a></h4></div>
</div>  

<form class="form-horizontal" role="form" method="post" asp-controller="Auction" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StartingBid" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="StartingBid">
            <span asp-validation-for="StartingBid"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Date">
            <span asp-validation-for="Date"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Create Auction</button>
        </div>
    </div>
</form>